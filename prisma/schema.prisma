generator client {
  provider = "prisma-client-js" // Trigger redeploy2
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PostType {
  BLOG
  PORTFOLIO
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   // HTML content
  type      PostType @default(BLOG)
  coverImage String?
  images    String[] @default([])
  published Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
